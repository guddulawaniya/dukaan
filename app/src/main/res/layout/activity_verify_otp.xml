<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".verify_otp_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backverify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/backarrow" />

        <TextView
            android:id="@+id/setnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Please enter  the 6-digit code sent to you at +91-"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/num1"
                android:layout_width="42dp"
                android:layout_height="46dp"
                android:layout_margin="8dp"
                android:backgroundTint="#5F7F98"
                android:ems="10"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|textPersonName"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="#BA8F8E8E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/num2"
                android:layout_width="42dp"
                android:layout_height="46dp"
                android:layout_margin="8dp"
                android:backgroundTint="#5F7F98"
                android:ems="10"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|textPersonName"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="#BA8F8E8E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/num3"
                android:layout_width="42dp"
                android:layout_height="46dp"
                android:layout_margin="8dp"
                android:backgroundTint="#5F7F98"
                android:ems="10"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|textPersonName"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="#BA8F8E8E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/num4"
                android:layout_width="42dp"
                android:layout_height="46dp"
                android:layout_margin="8dp"
                android:backgroundTint="#5F7F98"
                android:ems="10"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|textPersonName"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="#BA8F8E8E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/num5"
                android:layout_width="42dp"
                android:layout_height="46dp"
                android:layout_margin="8dp"
                android:backgroundTint="#5F7F98"
                android:ems="10"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|textPersonName"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="#BA8F8E8E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/num6"
                android:layout_width="42dp"
                android:layout_height="46dp"
                android:layout_margin="8dp"
                android:backgroundTint="#5F7F98"
                android:ems="10"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|textPersonName"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="#BA8F8E8E"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#8F8E8E"
                android:layout_height="wrap_content"
                android:text="Resend code in " />

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="30 seconds"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/nextstepotp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@drawable/freestartbutton"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
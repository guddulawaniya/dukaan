<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Login_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/backlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/backarrow" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Get Started"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Country"
                    android:textColor="#999B9C"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@drawable/downarrow"
                    android:drawableTint="@color/bg"
                    android:padding="5dp"
                    android:text="India (+91)"
                    android:textColor="#252424"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg" />

                <EditText
                    android:id="@+id/inputNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/bg"
                    android:ems="10"
                    android:hint="Enter 10 digit mobile number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="#3A3939"
                    android:textColorHint="#6E6A6A"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/numberconitinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/freestartbutton"
                    android:text="Continue"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/view3"
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="10dp"
                        android:background="#938E8E" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="or"
                        android:textColor="#938E8E"
                        android:textSize="18dp" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:background="#938E8E" />
                </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edbutton"
                android:drawableStart="@drawable/email"
                android:drawablePadding="10dp"
                android:gravity="center|fill"
                android:drawableTint="@color/bg"
                android:padding="10dp"
                android:paddingStart="60dp"
                android:text="Continue with Email"
                android:textColor="#292727"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edbutton"
                android:drawableStart="@drawable/google"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:paddingStart="45dp"
                android:text="Continue with Google"
                android:textColor="#292727"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edbutton"
                android:drawableStart="@drawable/facebook"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:paddingStart="35dp"
                android:text="Continue with Facebook"
                android:textColor="#292727"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>